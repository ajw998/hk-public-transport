{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/hk-public-transport/manifest.schema.json",
  "title": "Hong Kong Public Transport Static Bundle Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "manifest_version",
    "bundle_id",
    "bundle_version",
    "created_at_utc",
    "compatibility",
    "files",
    "sources",
    "build",
    "validation"
  ],
  "properties": {
    "manifest_version": { "type": "integer", "minimum": 1 },
    "bundle_id": { "type": "string", "minLength": 1 },
    "bundle_version": { "type": "string", "minLength": 1 },
    "created_at_utc": { "type": "string", "format": "date-time" },

    "compatibility": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "min_app_version"],
      "properties": {
        "schema_version": { "type": "integer", "minimum": 1 },
        "min_app_version": { "type": "string", "minLength": 1 }
      }
    },

    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "bytes", "sha256"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "content_type": { "type": "string" },
          "bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        }
      }
    },

    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "authority", "retrieved_at_utc", "sha256"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "authority": { "type": "string", "minLength": 1 },
          "retrieved_at_utc": { "type": "string", "format": "date-time" },
          "upstream_ref": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        }
      }
    },

    "build": {
      "type": "object",
      "additionalProperties": false,
      "required": ["etl_version", "git_commit", "deterministic"],
      "properties": {
        "etl_version": { "type": "string" },
        "git_commit": { "type": "string" },
        "deterministic": { "type": "boolean" }
      }
    },

    "validation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["passed", "checks"],
      "properties": {
        "passed": { "type": "boolean" },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "passed"],
            "properties": {
              "id": { "type": "string" },
              "passed": { "type": "boolean" },
              "details": { "type": "string" }
            }
          }
        }
      }
    },

    "stats": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stops": { "type": "integer", "minimum": 0 },
        "routes": { "type": "integer", "minimum": 0 },
        "patterns": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
